<?xml version='1.0' encoding='utf-8'?>
<widget id="areopagitics.DailyScrolls" version="1.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="SQLitePlugin">
        <param name="android-package" value="io.sqlc.SQLitePlugin" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <name>Daily Scrolls</name>
    <description>
        Catholic Mass Readings and Bible in interlinear Greek and Hebrew
    </description>
    <author email="areopagitics@gmail.com">
        Areopagitics
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="EnableViewportScale" value="true" />
</widget>
